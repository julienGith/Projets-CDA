@model OPS2020.Models.GestionEnqueteModel
@{
    ViewData["Title"] = "GestionEnquete";
}

<h2>Nouvelle campagne de sondage : Choix de la formation</h2>
<div class="row">
    <div id="divListO">
        <div class="card">
            <div class="card-body">
                <table id="listOTable" class="table">
                </table>
            </div>
        </div>
    </div>
</div>


<script>
    var query = "96GB011";
(function GetListOffre(query) {
            $.ajax({
                url: '@Url.Action("GetListeOffreFormation", "OPS")',
                data: { "query": "96GB011"},
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    if (response.data.length != 0) {
                        $("#listOTable").find("tr").remove();
                        $("#listOTable").find("thead").remove();
                        $("#listOTable").append($("<thead class='thead-light'><tr><th>ID Offre</th><th>Désignation</th><th>Date de fin</th><th>Les enquêtes planifiées</th></tr></thead>"));
                        data = response.data;
                        $.each(data, function (index, value) {
                            $("#listOTable").append($("<tbody><tr><td width='20%'>" +
                                value.codeProduitFormation + "</td><td width='50%'>" +
                                value.libelleOffreFormation + "</td><td><nav class='navbar navbar-expand-lg navbar-light bg-light'>" +
                                value.dateFinOffreFormation + "</td><td><nav class='navbar navbar-expand-lg navbar-light bg-light'>" +
                                value.campagneMail.dateCreation + "</td><td><nav class='navbar navbar-expand-lg navbar-light bg-light'>" +
                                value.campagneMail.dateCreation + "</td><td><nav class='navbar navbar-expand-lg navbar-light bg-light'>" +
                                "<a class='navbar-brand' href='#'></a>" +
                                "<button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent" +
                                value.codeProduitFormation + "' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>" +
                                "<span class='navbar-toggler-icon'></span></button><div class='collapse navbar-collapse' id='navbarSupportedContent'>" +
                                "<ul class='navbar-nav mr-auto'>" +
                                "<li class='nav-item'>" +
                                "<a class= 'nav-link' href='#' onclick='GetQuestionnaire(); return false;'>Choisir<span class='sr-only'>(current)</span></a>" +
                                "</li>" +
                                "</ul> " +
                                "</div> " +
                                "</nav></td></tr></tbody>"));
                            $("#divListO").fadeIn(1500);

                        });
                    }
                    else {
                        $("#listOTable").find("tr").remove();
                        $("#listOTable").find("thead").remove();
                        $("#divListO").hide();
                        $("#listVide").fadeIn(1500);
                    }
                },
                error: function (xhr, status, error) {

                }

            }) })();


</script>